<pathologies>
  <pathologie>
    <description>jing jin du poumon</description>
    <meridien>Poumon</meridien>
    <symptomes>
      <symptome>Blocage de la respiration, peï du 2ème mois d'hivers</symptome>
    </symptomes>
  </pathologie>
  <pathologie>
    <description>méridien du poumon externe</description>
    <meridien>Poumon</meridien>
    <symptomes>
      <symptome>Battement des ailes du nez</symptome>
      <symptome>Dessèchement des phanères</symptome>
      <symptome>Douleur lancinante au creux sus-claviculaire</symptome>
      <symptome>Pouls superficiel</symptome>
      <symptome>Symptômes thoraco-pulmonaires (toux continuelle, dyspnée, gonflement thoracique)</symptome>
      <symptome>Transpiration avec pollakiurie et diminution de l'appétit</symptome>
      <symptome>Vue floue dans les cas graves</symptome>
    </symptomes>
  </pathologie>
  <pathologie>
    <description>méridien du poumon interne</description>
    <meridien>Poumon</meridien>
    <symptomes>
      <symptome>Angoisse se manifestant par des serrements de poitrine</symptome>
      <symptome>Ballonnement abdominal</symptome>
      <symptome>Douleur à l'épaule et au dos avec urines claires et respiration courte</symptome>
      <symptome>Douleur le long du trajet du méridien</symptome>
      <symptome>Embarras gastrique</symptome>
      <symptome>Membres supérieurs froids</symptome>
      <symptome>Respiration courte et toux</symptome>
      <symptome>Sensation de froid ou de chaleur à la paume des mains</symptome>
      <symptome>Soif</symptome>
    </symptomes>
  </pathologie>
  <pathologie>
    <description>voie luo du poumon pleine</description>
    <meridien>Poumon</meridien>
    <symptomes>
      <symptome>Chaleur des mains et de l'éminence thénar</symptome>
    </symptomes>
  </pathologie>
  <pathologie>
    <description>voie luo du poumon vide</description>
    <meridien>Poumon</meridien>
    <symptomes>
      <symptome>Bâillements</symptome>
      <symptome>Mictions fréquentes en grande quantité</symptome>
    </symptomes>
  </pathologie>
  <pathologie>
    <description>zang poumon chaud</description>
    <meridien>Poumon</meridien>
    <symptomes>
      <symptome>Constipation, selles dures</symptome>
      <symptome>Douleur thoracique aiguë comme un coup de poignard</symptome>
      <symptome>Dysurie et hématurie</symptome>
      <symptome>Épistaxis</symptome>
      <symptome>Gorge irritée</symptome>
      <symptome>Soif</symptome>
      <symptome>Toux avec hémoptysie</symptome>
      <symptome>Visage fiévreux</symptome>
    </symptomes>
  </pathologie>
  <pathologie>
    <description>zang poumon froid</description>
    <meridien>Poumon</meridien>
    <symptomes>
      <symptome>Absence de soif</symptome>
      <symptome>Douleur thoracique sourde, dyspnée et toux</symptome>
    </symptomes>
  </pathologie>
  <pathologie>
    <description>zang poumon plein</description>
    <meridien>Poumon</meridien>
    <symptomes>
      <symptome>Épaule et dos douloureux</symptome>
      <symptome>Nausée</symptome>
      <symptome>Plénitude douloureuse de la poitrine (emphysème) et des côtes entraînant dyspnée et toux avec mucosités purulentes</symptome>
    </symptomes>
  </pathologie>
  <pathologie>
    <description>zang poumon vide</description>
    <meridien>Poumon</meridien>
    <symptomes>
      <symptome>Alopécie</symptome>
      <symptome>Asthénie et amaigrissement</symptome>
      <symptome>Fièvre et transpiration brutale et intermittente</symptome>
      <symptome>Gorge et peau sèches</symptome>
      <symptome>Respiration faible</symptome>
      <symptome>Toux avec envie d'uriner</symptome>
      <symptome>Visage pâle et joues rouges</symptome>
      <symptome>Voix faible</symptome>
    </symptomes>
  </pathologie>
</pathologies>
